<?php
$num = ( isset($_REQUEST['number']) ) ? htmlspecialchars(strip_tags(trim($_REQUEST['number']))) : '';
header("Content-type: image/png");
$pic = imagecreatefrompng("numblank.png");
$black = imagecolorallocate($pic, 0,0,0);
imagestring($pic, 1, 2, 2, '#'.$num , $black);

imagepng($pic);
imagedestroy($pic);
?> 